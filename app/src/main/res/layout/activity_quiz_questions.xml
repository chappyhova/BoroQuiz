<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="davidchapman.com.boroquiz.QuizQuestionsActivity"
                android:background="@drawable/mainbackground">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 1"
        android:id="@+id/answerButton1"
        android:background="@drawable/but"
        android:textColor="#fc0000"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/answerButton2"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 2"
        android:id="@+id/answerButton2"
        android:background="@drawable/but"
        android:textColor="#fc0000"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/answerButton3"
        android:layout_alignParentBottom="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 3"
        android:id="@+id/answerButton3"
        android:background="@drawable/but"
        android:textColor="#fc0000"
        android:textSize="16sp"
        android:layout_above="@+id/answerButton4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 4"
        android:id="@+id/answerButton4"
        android:background="@drawable/but"
        android:textColor="#fc0000"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true" />

    <davidchapman.com.boroquiz.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question No."
        android:id="@+id/questionNumberTextView"
        android:textSize="60sp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <davidchapman.com.boroquiz.CustomTextView2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boro"
        android:id="@+id/questionTextView"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:layout_below="@+id/questionNumberTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:paddingTop="16dp"
        android:typeface="serif"
        android:layout_above="@+id/answerButton1" />
</RelativeLayout>
